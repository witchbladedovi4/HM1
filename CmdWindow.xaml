<Window x:Class="HM1.CmdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HM1"
        mc:Ignorable="d"
        Title="CmdWindow" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>

            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Button x:Name="backMain"
                Content="Задание 1"
                Click="backMain_Click"
                Padding="10, 5"
                Margin="0, 0,10, 10"
                >
            
        </Button>
        <Button x:Name="btnStartCmd"   
                        Content="Запустить CMD" 
                        Click="BtnStartCmd_Click"
                        Padding="10,5"
                        Margin="0,0,10,10"
                        Grid.Column="1" 
                        />
        <Button x:Name="btnSendCommand" 
                        Content="Выполнить команду" 
                        Click="BtnSendCommand_Click"
                        Padding="10,5"
                        Margin="0,0,10,10"
                        IsEnabled="False"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        />
        <Button x:Name="btnStopCmd" 
                        Content="Остановить CMD" 
                        Click="BtnStopCmd_Click" 
                        Padding="10,5"
                        IsEnabled="False"
                        Grid.Column="4"
                        Margin="0,0,0,10"
                        />



        <TextBlock Text="Команда:" 
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       HorizontalAlignment="Center"/>
        <TextBox x:Name="txtCommand" 
                     Text="dir"
                     KeyDown="TxtCommand_KeyDown"
                     Grid.Column="1"
                     Grid.Row="1"
                     Grid.ColumnSpan="2"/>
        <TextBlock Text="Рабочая папка:" 
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="3"
                       HorizontalAlignment="Center"/>
        <TextBox x:Name="txtWorkingDirectory" 
                     Text="C:\"
                     Grid.Row="1"
                     Grid.Column="4"/>


        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="1"
                Margin="0,10,0,10"
                Grid.ColumnSpan="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="txtOutput" 
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="12"
                         IsReadOnly="True"
                         Background="Black"
                         Foreground="White"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"/>
            </ScrollViewer>
        </Border>

        <TextBlock x:Name="txtStatus" 
                   Grid.Row="3"
                   Text="Готов к работе"
                   Foreground="Gray"/>
    </Grid>
</Window>

    